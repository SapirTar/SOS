@model IEnumerable<WebApp.Models.CreditCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn-outline-dark" asp-action="Create">Create New</a> |
    <a class="btn-outline-dark" asp-area="" asp-controller="CreditCards" asp-action="Search">Search</a>
</p>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CVV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardHolder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CVV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardHolder)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CardNum" class="normal-link">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CardNum" class="normal-link">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CardNum" class="normal-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

